{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PaperEater",
  "version": "1.0.0",
  "identifier": "com.yam1c6a.papereater",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "PaperEater",
        "width": 600,
        "height": 820,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/icon.icns",
      "icons/icon.png",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/512x512.png"
    ],
    "windows": {
      "wix": {
        "language": "ja-JP"
      }
    }
  }
}
